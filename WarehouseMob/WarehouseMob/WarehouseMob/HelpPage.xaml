<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WarehouseMob.HelpPage"
             BackgroundColor="White">
    <!-- Белый фон страницы -->

    <ScrollView>
        <StackLayout Padding="20">

            <!-- Заголовок -->
            <Label Text="Мобильное приложение для кладовщика"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="#4CAF50" 
                HorizontalOptions="Center"
                   Margin="0, 0, 0, 20"/>

                <!-- Описание -->
                <Frame BackgroundColor="White" 
                   CornerRadius="10" 
                   Padding="15" 
                   Margin="0, 10" 
                   BorderColor="#4CAF50" 
                    HasShadow="True">
                    <!-- Тень -->
                    <Label Text="Мобильное приложение предназначено для роли кладовщика, но просмотр данных могут осуществлять и другие роли."
                       FontSize="16"
                       TextColor="Black"/>
                </Frame>

                <!-- Заголовок "Функции мобильного приложения" -->
                <Label Text="Функции мобильного приложения:"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="#4CAF50" 
                    Margin="0, 20, 0, 10"/>

                    <!-- Список функций -->
                    <Frame BackgroundColor="White" 
                   CornerRadius="10" 
                   Padding="15" 
                   Margin="0, 10" 
                   BorderColor="#4CAF50" 
                        HasShadow="True">
                        <!-- Тень -->
                        <StackLayout>
                            <Label Text="1. Двухфакторная аутентификация"
                           FontSize="16"
                           TextColor="Black"
                           Margin="0, 0, 0, 10"/>

                            <Label Text="2. Реализовано меню со следующими фрагментами:"
                           FontSize="16"
                           TextColor="Black"
                           Margin="0, 0, 0, 10"/>

                            <Label Text="   а. Список складов и их местоположение"
                           FontSize="16"
                           TextColor="Black"
                           Margin="20, 0, 0, 10"/>

                            <Label Text="   б. Список товаров по складам"
                           FontSize="16"
                           TextColor="Black"
                           Margin="20, 0, 0, 10"/>

                            <Label Text="   в. Сканирование штрихкода (QR кода) для проверки товара"
                           FontSize="16"
                           TextColor="Black"
                           Margin="20, 0, 0, 10"/>

                            <Label Text="   г. Профиль с пропуском"
                           FontSize="16"
                           TextColor="Black"
                           Margin="20, 0, 0, 10"/>
                        </StackLayout>
                    </Frame>
        </StackLayout>
    </ScrollView>
</ContentPage>