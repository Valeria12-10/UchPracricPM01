<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:zxing="clr-namespace:ZXing.Net.Mobile.Forms;assembly=ZXing.Net.Mobile.Forms"
             xmlns:zxingCommon="clr-namespace:ZXing.Common;assembly=zxing.portable"
             x:Class="WarehouseMob.ProfilePage"
             Padding="0,40,0,0"
             BackgroundColor="White">
    <!-- Белый фон страницы -->

    <ContentPage.Content>
        <!-- Добавляем ScrollView для прокрутки -->
        <ScrollView>
            <StackLayout Padding="20" Spacing="15">

                <!-- Фотография пользователя -->
                <Frame BackgroundColor="White" 
                       CornerRadius="50" 
                       Padding="0" 
                       Margin="0, 10" 
                       BorderColor="#4CAF50" 
                    HasShadow="True">
                    <!-- Тень -->
                    <Image x:Name="UserImage" 
                           HeightRequest="100" 
                           WidthRequest="100" 
                           Aspect="AspectFill"
                           HorizontalOptions="Center">
                        <Image.Source>
                            <FileImageSource File="{Binding Фото}" />
                        </Image.Source>
                    </Image>
                </Frame>

                <!-- Кнопка для изменения фотографии -->
                <Button Text="Изменить фото" 
                        Clicked="OnChangePhotoClicked" 
                        HorizontalOptions="Center"
                        BackgroundColor="#4CAF50" 
                    TextColor="White"
                        CornerRadius="25"
                   
                    FontSize="Medium"
                        HeightRequest="40"
                        WidthRequest="150"/>

                    <!-- Текущий пользователь -->
                    <Label Text="{Binding ИмяПользователя}" 
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="#4CAF50" 
                        HorizontalOptions="Center" 
                       Margin="0, 10, 0, 20"/>

                        <!-- Поле для изменения почты -->
                        <Frame BackgroundColor="White" 
                       CornerRadius="10" 
                       Padding="10" 
                       BorderColor="#4CAF50" 
                            HasShadow="True">
                            <!-- Тень -->
                            <Entry Placeholder="Новая почта" 
                           Text="{Binding Email}" 
                           TextColor="Black" 
                           PlaceholderColor="Gray"/>
                        </Frame>

                        <!-- Поле для изменения пароля -->
                        <Frame BackgroundColor="White" 
                       CornerRadius="10" 
                       Padding="10" 
                       BorderColor="#4CAF50"
                            HasShadow="True">
                            <!-- Тень -->
                            <Entry Placeholder="Новый пароль" 
                           IsPassword="True"
                           TextColor="Black" 
                           PlaceholderColor="Gray"/>
                        </Frame>

                        <!-- Кнопка для сохранения изменений -->
                        <Button Text="Сохранить изменения" 
                        Clicked="OnSaveChangesClicked" 
                        BackgroundColor="#4CAF50" 
                            TextColor="White"
                        CornerRadius="25"
                           
                            FontSize="Medium"
                        HeightRequest="50"
                        HorizontalOptions="Fill"/>

                            <!-- Генерация QR-кода -->
                            <Button Text="Сгенерировать QR-код" 
                        Clicked="OnGenerateQRClicked" 
                        BackgroundColor="#4CAF50" 
                                TextColor="White"
                        CornerRadius="25"
                               
                                FontSize="Medium"
                        HeightRequest="50"
                        HorizontalOptions="Fill"/>

                                <!-- Отображение QR-кода с использованием ZXingBarcodeImageView -->
                                <Frame BackgroundColor="White" 
                       CornerRadius="10" 
                       Padding="10" 
                       BorderColor="#4CAF50" 
                                    HasShadow="True">
                                    <!-- Тень -->
                                    <zxing:ZXingBarcodeImageView x:Name="QRCodeImage"
                                                  HeightRequest="200"
                                                  WidthRequest="200"
                                                  HorizontalOptions="Center"
                                                  BarcodeFormat="QR_CODE"
                                                  BarcodeValue="Нажмите 'Сгенерировать QR-код'">
                                        <zxing:ZXingBarcodeImageView.BarcodeOptions>
                                            <zxingCommon:EncodingOptions Width="300" Height="300" Margin="1" />
                                        </zxing:ZXingBarcodeImageView.BarcodeOptions>
                                    </zxing:ZXingBarcodeImageView>
                                </Frame>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>