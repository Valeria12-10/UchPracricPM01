<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WarehouseMob.WarehousePage"
             BackgroundColor="White">
    <!-- Белый фон страницы -->

    <ContentPage.Content>
        <StackLayout Padding="20">
            <!-- Заголовок страницы -->
            <Label Text="Склады"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="#4CAF50" 
                HorizontalOptions="Center"
                   Margin="0, 0, 0, 20"/>

                <!-- Список складов -->
                <CollectionView x:Name="СкладыCollectionView" 
                            SelectionMode="Single" 
                            SelectionChanged="OnСкладSelected">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <!-- Контейнер для элемента списка -->
                            <Frame BackgroundColor="White" 
                               CornerRadius="10" 
                               Padding="15" 
                               Margin="0, 10" 
                               BorderColor="#4CAF50" 
                                HasShadow="True">
                                <!-- Тень -->
                                <StackLayout>
                                    <!-- Название склада -->
                                    <Label Text="{Binding Название}" 
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="#4CAF50"/>
                                    <!-- Зеленый цвет текста -->

                                    <!-- Адрес склада -->
                                    <Label Text="{Binding Адрес}" 
                                       FontSize="14"
                                       TextColor="Gray"
                                       Margin="0, 5, 0, 0"/>

                                    <!-- Тип склада -->
                                    <Label Text="{Binding ТипСклада}" 
                                       FontSize="14"
                                       TextColor="Gray"
                                       Margin="0, 5, 0, 0"/>

                                    <!-- Зона хранения -->
                                    <Label Text="{Binding ЗонаХранения}" 
                                       FontSize="14"
                                       TextColor="Red"
                                       Margin="0, 5, 0, 0"/>

                                    <!-- Разделитель -->
                                    <BoxView Color="#E0E0E0" 
                                         HeightRequest="1" 
                                         Margin="0, 10, 0, 0"/>
                                </StackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>